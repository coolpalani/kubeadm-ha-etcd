      apiVersion: extensions/v1beta1
      kind: Deployment
      metadata:
        name: kubernetes-dashboard
        namespace: kube-system
        labels:
          application: kubernetes-dashboard
          version: {{kubernetes_version_suffix}}
          kubernetes.io/cluster-service: "true"
      spec:
        replicas: 1
        selector:
          matchLabels:
            application: kubernetes-dashboard
        template:
          metadata:
            labels:
              application: kubernetes-dashboard
              version: {{kubernetes_version_suffix}}
              kubernetes.io/cluster-service: "true"
            annotations:
              scheduler.alpha.kubernetes.io/critical-pod: ''
              scheduler.alpha.kubernetes.io/tolerations: '[{"key":"CriticalAddonsOnly", "operator":"Exists"}]'
          spec:
            containers:
            - name: kubernetes-dashboard
              image: gcr.io/google_containers/kubernetes-dashboard-amd64:{{kubernetes_version_suffix}}
              resources:
                limits:
                  cpu: 100m
                  memory: 50Mi
                requests:
                  cpu: 100m
                  memory: 50Mi
              ports:
              - containerPort: 9090
              livenessProbe:
                httpGet:
                  path: /
                  port: 9090
                initialDelaySeconds: 30
                timeoutSeconds: 30
